{
  "solidity.linter": "solium",
  "solidity.soliumRules": {
    "quotes": ["error", "double"],
    "no-empty-blocks": "off",
    "indentation": ["error", 2],
    "max-len": ["warning", 99],
    "no-constant": ["error"],
    "security/enforce-explicit-visibility": ["error"],
    "security/no-block-members": ["warning"],
    "security/no-inline-assembly": ["warning"]
  },
  "solidity.enabledSolium": true,
}
